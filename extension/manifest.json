{
   "content_scripts": [ {
      "js": [ "inject.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
   } ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "favicon.ico",
    "default_title": "phonecam"
  },
  "manifest_version": 2,
  "name": "PhoneCam",
  "description": "Use your mobile phone as a webcam with WebRTC",
  "icons": {
    "16": "favicon.ico"
  },
  "version": "0.0.1",
  "permissions": [
    "http://*/", "https://*/"
  ]
}
