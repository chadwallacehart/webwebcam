{
   "content_scripts": [ {
      "js": [ "content.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
   } ],
  "background": {
    "scripts": ["peerjs.min.js", "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "webwebcam"
  },
  "manifest_version": 2,
  "name": "WebWebCam",
  "description": "Use your mobile phone or another browser as a webcam with WebRTC",
  "version": "0.0.1",
  "permissions": [
    "http://*/", "https://*/", "storage"
  ],
  "web_accessible_resources": ["inject.js", "peerjs.min.js"]
}
